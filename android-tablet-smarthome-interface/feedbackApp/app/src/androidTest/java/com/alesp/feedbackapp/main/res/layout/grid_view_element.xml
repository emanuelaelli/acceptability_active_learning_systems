<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Listening for data..."
        android:id="@+id/placeData"></TextView>

    <ImageButton
        android:id="@+id/firstactivity_button"
        android:text="Button"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_gravity="center"
        style="@style/CustomButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/buttonshape"
        app:srcCompat="@drawable/ic_play_button_sing"
        android:adjustViewBounds="true"
        android:padding="30dp"
        android:scaleType="fitCenter"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="Listening for data..."
        android:id="@+id/activityData"></TextView>
   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listening for data..."
        android:layout_marginTop="30dp"
        android:gravity="center"

        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/currentActivity"
        android:textSize="20dp"></TextView> -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/user0"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/user1"
            android:background="@android:color/transparent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/user2"
            android:background="@android:color/transparent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/user3"
            android:background="@android:color/transparent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

